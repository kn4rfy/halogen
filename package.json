{
  "name": "halogen",
  "version": "0.2.0",
  "description": "A collection of loading spinners with React.js",
  "main": "./dist/halogen.js",
  "scripts": {
    "prepublish": "yarn format && yarn build",
    "build": "webpack --config webpack.publish.config.js",
    "compile": "babel src --out-dir out && node-sass src --output out",
    "prettier": "prettier --write --single-quote --no-semi --trailing-comma es5 --print-width 100 --tab-width 4 --use-tabs \"src/**/*.js\"",
    "lint": "eslint src",
    "format": "yarn prettier"
  },
  "author": "Yuanyan Cao, Francis Knarfy Elopre <kn4rfy@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kn4rfy/halogen.git"
  },
  "keywords": [
    "react",
    "react-component",
    "loader",
    "spinner",
    "halogen"
  ],
  "bugs": {
    "url": "https://github.com/kn4rfy/halogen/issues"
  },
  "homepage": "https://github.com/kn4rfy/halogen#readme",
  "dependencies": {
    "create-react-class": "^15.6.3",
    "domkit": "0.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.0.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.0",
    "node-sass": "^4.12.0",
    "path": "^0.12.7",
    "prettier": "^1.18.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5"
  },
  "peerDependencies": {
    "create-react-class": "^15.6.3",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  }
